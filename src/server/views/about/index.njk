{% from "macros/form.njk" import input, textarea %}

{% extends "layout.njk" %}

{% block content %}
<h1>{{ title | capitalize }}</h1>
<p>{{ description }}</p>
<form action="/contact" method="POST" 
      style="width:60%;margin:50px auto;display:flex;flex-wrap:wrap;justify-content:space-between"
      >
      {{ input("name", "text", "Your Name") }}
      {{ input("email", "email", "Your Email") }}
      {{ textarea("message", "Your Message") }}
    <button type="submit">Send</button>
</form>

{% endblock %}
